pipeline {
    agent any
    tools {
        msbuild 'msbuild2022'
    }
    stages {
        stage('Build') {
           steps {
                 script {
                     bat '''
                         SET INSTALL_PATH=%WORKSPACE%
                         SET INSTALL_FILE=%INSTALL_PATH%\\WixSharpInstaller.sln

                        REM remove any previous Installers
                         del /Q %INSTALL_PATH%\\*.msi
                         del /Q %INSTALL_PATH%\\*.exe

                        msbuild %INSTALL_FILE% -t:restore -p:RestorePackagesConfig=true

                        msbuild -m %INSTALL_FILE% /t:rebuild /p:Configuration=Debug

                    '''
                 }
        }
    }
}
}
