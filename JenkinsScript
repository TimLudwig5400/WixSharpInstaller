pipeline {
    agent any
    tools {
        msbuild 'msbuild2022'
    }
    stages {
        stage('Build') {
           steps {
                 script {
                     bat '''
                        REM remove any previous Installers
                         del /Q %INSTALL_PATH%\\*.msi
                         del /Q %INSTALL_PATH%\\*.exe

                        msbuild wixsharpinstaller.csproj -t:restore -p:RestorePackagesConfig=true

                    '''
                 }
        }
    }
}
}
